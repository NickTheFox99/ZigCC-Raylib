{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Release Windows",
      "type": "cppbuild",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "command": "zig",
      "args": [
        "cc",
        "-o",
        "${workspaceFolder}/bin/win/${fileBasenameNoExtension}.exe",
        "-g",
        "${file}",
        "-I",
        "${workspaceFolder}/include/raylib-zig",
        "${workspaceFolder}/lib/raylib-zig/raylib.lib",
        "-I",
        "${workspaceFolder}/include",
        "-lopengl32",
        "-lgdi32",
        "-lwinmm",
        "-Ofast"
      ]
    },
    {
      "label": "Debug Windows",
      "type": "cppbuild",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "zig",
      "args": [
        "cc",
        "-o",
        "${workspaceFolder}/bin/win/${fileBasenameNoExtension}.exe",
        "-g",
        "${file}",
        "-I",
        "${workspaceFolder}/include/raylib-zig",
        "${workspaceFolder}/lib/raylib-zig/raylib.lib",
        "-I",
        "${workspaceFolder}/include",
        "-lopengl32",
        "-lgdi32",
        "-lwinmm",
        "-DDEBUG"
      ]
    },
    {
      "label": "Debug Web",
      "type": "cppbuild",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "${workspaceFolder}/debug-emscripten.bat"
    },
    {
      "label": "Release Web",
      "type": "cppbuild",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "${workspaceFolder}/release-emscripten.bat"
    }
  ]
}
